{
    "name": "@vamship/generator-typescript",
    "version": "2.1.0",
    "description": "Yeoman generator for typescript projects",
    "homepage": "",
    "author": {
        "name": "Vamshi K Ponnapalli",
        "email": "vamshi.ponnapalli@gmail.com",
        "url": ""
    },
    "files": [
        "generators",
        "utils"
    ],
    "main": "generators/index.js",
    "keywords": [
        "typescript",
        "yeoman-generator"
    ],
    "devDependencies": {
        "eslint": "^5.11.0",
        "eslint-config-prettier": "^3.3.0",
        "eslint-config-xo": "^0.25.1",
        "eslint-plugin-prettier": "^3.0.0",
        "husky": "^1.2.1",
        "jest": "^23.6.0",
        "lint-staged": "^8.1.0",
        "nsp": "^3.2.1",
        "prettier": "^1.15.3",
        "yeoman-assert": "^3.1.1",
        "yeoman-test": "^1.9.1"
    },
    "engines": {
        "npm": ">= 4.0.0"
    },
    "dependencies": {
        "chalk": "^2.4.1",
        "semver": "^5.6.0",
        "yeoman-generator": "^3.2.0",
        "yosay": "^2.0.2"
    },
    "jest": {
        "testEnvironment": "node"
    },
    "scripts": {
        "prepublishOnly": "nsp check",
        "pretest": "eslint .",
        "precommit": "lint-staged",
        "test": "jest"
    },
    "lint-staged": {
        "linters": {
            "*.js": [
                "eslint --fix",
                "git add"
            ],
            "*.json": [
                "git add"
            ]
        },
        "ignore": [
            "generators/api/templates/package.json",
            "generators/api/templates/Gruntfile.js",
            "generators/cli/templates/package.json",
            "generators/cli/templates/Gruntfile.js",
            "generators/lib/templates/package.json",
            "generators/lib/templates/Gruntfile.js"
        ]
    },
    "eslintConfig": {
        "extends": [
            "xo",
            "prettier"
        ],
        "env": {
            "jest": true,
            "node": true
        },
        "rules": {
            "prettier/prettier": [
                "error",
                {
                    "singleQuote": true,
                    "printWidth": 90
                }
            ]
        },
        "plugins": [
            "prettier"
        ]
    },
    "repository": "https://github.com/vamship/generator-typescript",
    "license": "MIT"
}
