{
    "name": "<%= projectNamespacedName %>",
    "version": "<%= projectVersion %>",
    "description": "<%= projectDescription %>",
    "main": "dist/index.js",
    "scripts": {
        "clean": "gulp clean",
        "format": "gulp format",
        "lint": "gulp lint",
        "test": "cross-env NODE_ENV=development dotenv-load  gulp --series clean build test-unit",
        "package": "cross-env NODE_ENV=test dotenv-load gulp --series clean format lint build test-unit package",
        "publish": "gulp publish",
        "all": "gulp --series clean format lint build test-unit clean",

        "watch:build": "gulp watch-build",
        "watch:test": "cross-env NODE_ENV=development dotenv-load gulp watch-test-unit",
        "watch:lint": "gulp watch-lint",

        "edit:docs": "docker run -d --env URL=docs/openapi.yaml -p 9000:8080 -v $(pwd)/docs:/usr/share/nginx/html/docs swaggerapi/swagger-editor",

        "build": "gulp build",
        "build:docs": "openapi-generator generate -i docs/openapi.yaml -g html2 -o docs/generated-html"
    },
    "files": [ "package.json", "LICENSE", "README.md", "src/**/*" ],
    "author": "<%= authorName %> <<%= authorEmail %>>",
    "keywords": <%- JSON.stringify(projectKeywords) %>,
    "license": "MIT",
    "devDependencies": {
        "@aws-cdk/aws-apigateway": "^1.73.0",
        "@aws-cdk/aws-cloudwatch": "^1.73.0",
        "@aws-cdk/aws-cognito": "^1.73.0",
        "@aws-cdk/aws-dynamodb": "^1.73.0",
        "@aws-cdk/aws-events": "^1.73.0",
        "@aws-cdk/aws-events-targets": "^1.73.0",
        "@aws-cdk/aws-iam": "^1.73.0",
        "@aws-cdk/aws-lambda": "^1.73.0",
        "@aws-cdk/aws-sns": "^1.73.0",
        "@aws-cdk/aws-sns-subscriptions": "^1.73.0",
        "@aws-cdk/aws-sqs": "^1.73.0",
        "@aws-cdk/core": "^1.73.0",
        "@aws-cdk/cx-api": "^1.73.0",
        "@aws-cdk/region-info": "^1.73.0",
        "@openapitools/openapi-generator-cli": "^2.1.4",
        "@types/node": "^14.14.7",
        "@types/sinon": "^9.0.8",
        "@vamship/aws-test-utils": "^1.3.8",
        "@vamship/build-utils": "0.4.2",
        "@vamship/cdk-utils": "^1.1.5",
        "@vamship/config": "^1.4.8",
        "@vamship/error-types": "^1.7.10",
        "@vamship/test-utils": "^2.4.11",
        "ansi-colors": "^4.1.1",
        "aws-cdk": "^1.73.0",
        "chai": "^4.2.0",
        "chai-as-promised": "^7.1.1",
        "cross-env": "^7.0.2",
        "docdash": "^1.2.0",
        "dotenv": "^8.2.0",
        "dotenv-load": "^2.0.0",
        "gulp": "^4.0.2",
        "mocha": "^8.2.1",
        "nyc": "^15.1.0",
        "rewire": "^5.0.0",
        "sinon": "^9.2.1",
        "sinon-chai": "^3.5.0",
        "tslint": "^6.0.0",
        "tslint-no-unused-expression-chai": "^0.1.4",
        "typedoc": "^0.19.2",
        "typedoc-plugin-external-module-name": "^4.0.3",
        "typescript": "^4.0.5"
    },
    "dependencies": {
        "@types/bluebird": "^3.5.33",
        "@types/chai": "^4.2.14",
        "@types/chai-as-promised": "^7.1.3",
        "@types/mocha": "^8.0.4",
        "@types/rewire": "^2.5.28",
        "@types/sinon-chai": "^3.2.5",
        "@vamship/arg-utils": "^2.4.8",
        "@vamship/aws-dynamodb": "^1.4.12",
        "@vamship/aws-lambda": "^1.5.9",
        "aws-sdk": "^2.789.0",
        "bluebird": "^3.7.2"
    },

    "repository": {
        "type": "git",
        "url": "https://<%= gitUrl %>.git"
    },
    "bugs": {
        "url": "https://<%= gitUrl %>/issues"
    },
    "homepage": "https://<%= gitUrl %>#readme",
    "buildMetadata": {
        "projectType": "aws-microservice",
        "language": "ts",
        "requiredEnv": [
            "INFRA_ENV",
            "AWS_PROFILE"
        ],
        "aws": {
            "region": "<%= awsRegion %>",
            "stacks": {
                "core": "<%= projectPrefix %>-core",
                "api": "<%= projectPrefix %>-api"
            }
        }
    }
}
