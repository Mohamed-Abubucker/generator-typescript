{
    "name": "<%= projectNamespacedName %>",
    "version": "<%= projectVersion %>",
    "description": "<%= projectDescription %>",
    "bin": {
        "<%= projectCliName %>": "src/bin/<%= projectName %>.js"
    },
    "scripts": {
        "all": "gulp --series format lint build test-unit clean",
        "test": "gulp test-unit",
        "prepack": "gulp --series clean format lint build test-unit"
    },
    "files": [ "package.json", "LICENSE", "README.md", "src/**/*", "bin/**/*" ],
    "author": "<%= authorName %> <<%= authorEmail %>>",
    "keywords": <%- JSON.stringify(projectKeywords) %>,
    "license": "MIT",
    "devDependencies": {
        "@types/chai": "^4.2.7",
        "@types/chai-as-promised": "^7.1.2",
        "@types/mocha": "^5.2.7",
        "@types/node": "^13.1.8",
        "@types/sinon-chai": "^3.2.3",
        "@vamship/arg-utils": "^2.4.6",
        "@vamship/build-utils": "0.2.0",
        "@vamship/error-types": "^1.7.8",
        "@vamship/test-utils": "^2.4.9",
        "ansi-colors": "^4.1.1",
        "chai": "^4.2.0",
        "chai-as-promised": "^7.1.1",
        "fancy-log": "^1.3.3",
        "gulp": "^4.0.2",
        "mocha": "^7.0.0",
        "nyc": "^15.0.0",
        "rewire": "^4.0.1",
        "sinon": "^8.1.0",
        "sinon-chai": "^3.4.0",
        "tslint": "^5.20.1",
        "tslint-no-unused-expression-chai": "^0.1.4",
        "typedoc": "^0.16.7",
        "typescript": "^3.7.5"
    },
    "dependencies": {
        "@vamship/config": "^1.4.6",
        "@vamship/logger": "^4.2.6",
        "bluebird": "^3.7.2",
        "yargs": "^15.1.0"
    },
    "repository": {
        "type": "git",
        "url": "https://<%= gitUrl %>.git"
    },
    "bugs": {
        "url": "https://<%= gitUrl %>/issues"
    },
    "homepage": "https://<%= gitUrl %>#readme",
    "buildMetadata": {
        "projectType": "cli",
<% if(dockerRequired) {-%>
        "language": "ts",
        "docker": {
<%   if(dockerFullRepo) {-%>
            "repo": "<%= dockerFullRepo %>"
<%   } else if(dockerCustomRegistry) {-%>
            "registry": "<%= dockerCustomRegistry %>"
<%   }-%>
        }
<% } else {-%>
        "language": "ts"
<% }-%>

    }
}
