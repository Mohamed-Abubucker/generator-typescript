{
    "name": "<%= projectNamespacedName %>",
    "version": "<%= projectVersion %>",
    "description": "<%= projectDescription %>",
    "bin": {
        "<%= projectCliName %>": "src/bin/<%= projectName %>.js"
    },
    "scripts": {
        "all": "gulp --series format lint build test-unit clean",
        "test": "gulp --series build test-unit",
        "package": "gulp --series clean lint format build test-unit package",
        "publish": "gulp --series clean lint format build test-unit package publish",
        "watch:build": "gulp watch-build",
        "watch:test": "gulp watch-test-unit"
    },
    "files": [ "package.json", "LICENSE", "README.md", "src/**/*", "bin/**/*" ],
    "author": "<%= authorName %> <<%= authorEmail %>>",
    "keywords": <%- JSON.stringify(projectKeywords) %>,
    "license": "MIT",
    "devDependencies": {
        "@types/chai": "^4.2.11",
        "@types/chai-as-promised": "^7.1.2",
        "@types/mocha": "^7.0.2",
        "@types/node": "^13.13.5",
        "@types/sinon-chai": "^3.2.4",
        "@vamship/arg-utils": "^2.4.7",
        "@vamship/build-utils": "0.3.2",
        "@vamship/test-utils": "^2.4.10",
        "ansi-colors": "^4.1.1",
        "chai": "^4.2.0",
        "chai-as-promised": "^7.1.1",
        "fancy-log": "^1.3.3",
        "gulp": "^4.0.2",
        "mocha": "^7.1.2",
        "nyc": "^15.0.1",
        "rewire": "^5.0.0",
        "sinon": "^9.0.2",
        "sinon-chai": "^3.5.0",
        "tslint": "^6.1.2",
        "tslint-no-unused-expression-chai": "^0.1.4",
        "typedoc": "^0.17.6",
        "typescript": "^3.8.3"
    },
    "dependencies": {
        "@vamship/error-types": "^1.7.9",
        "@vamship/logger": "^4.2.7",
        "bluebird": "^3.7.2",
        "yargs": "^15.3.1"
    },
    "repository": {
        "type": "git",
        "url": "https://<%= gitUrl %>.git"
    },
    "bugs": {
        "url": "https://<%= gitUrl %>/issues"
    },
    "homepage": "https://<%= gitUrl %>#readme",
    "buildMetadata": {
        "projectType": "cli",
        "requiredEnv": [],
<% if(dockerRequired) {-%>
        "language": "ts",
        "docker": {
            "default": {
                "repo": "<%= dockerFullRepo %>",
                "buildArgs": {
                }
            }
        }
<% } else {-%>
        "language": "ts"
<% }-%>
    }
}
