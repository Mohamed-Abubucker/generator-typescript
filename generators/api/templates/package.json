{
    "name": "<%= projectNamespacedName %>",
    "version": "<%= projectVersion %>",
    "description": "<%= projectDescription %>",
    "main": "dist/index.js",
    "scripts": {
        "clean": "gulp clean",
        "format": "gulp format",
        "lint": "gulp lint",
        "test": "cross-env NODE_ENV=development dotenv-load  gulp --series clean build test-unit",
        "package": "cross-env NODE_ENV=test dotenv-load gulp --series clean format lint build test-unit package",
        "publish": "gulp publish",
        "all": "gulp --series clean format lint build test-unit clean",

        "watch:build": "gulp watch-build",
        "watch:test": "cross-env NODE_ENV=development dotenv-load gulp watch-test-unit",
        "watch:lint": "gulp watch-lint",

        "edit:docs": "docker run -d --env URL=docs/openapi.yaml -p 9000:8080 -v $(pwd)/docs:/usr/share/nginx/html/docs swaggerapi/swagger-editor",

        "build": "gulp build",
        "build:docs": "openapi-generator generate -i docs/openapi.yaml -g html2 -o docs/generated-html",

        "start:dev": "cross-env NODE_ENV=development dotenv-load node working/src/index",
<% if(rdbmsRequired) {-%>
        "db:migrate:dev": "cross-env NODE_ENV=development dotenv-load knex migrate:latest --knexfile src/db/knexfile.ts",
<% }-%>

        "start": "node src/index",
<% if(rdbmsRequired) {-%>
        "db:migrate": "knex migrate:latest --knexfile src/db/knexfile.js"
<% }-%>
    },
    "files": [ "package.json", "LICENSE", "README.md", "src/**/*" ],
    "author": "<%= authorName %> <<%= authorEmail %>>",
    "keywords": <%- JSON.stringify(projectKeywords) %>,
    "license": "MIT",
    "devDependencies": {
        "@types/chai": "^4.2.14",
        "@types/chai-as-promised": "^7.1.3",
        "@types/express": "^4.17.8",
        "@types/mocha": "^8.0.3",
        "@types/sinon-chai": "^3.2.5",
        "@vamship/build-utils": "0.4.2",
        "@vamship/test-utils": "^2.4.11",
        "ansi-colors": "^4.1.1",
        "chai": "^4.2.0",
        "chai-as-promised": "^7.1.1",
        "cross-env": "^7.0.2",
        "fancy-log": "^1.3.3",
        "chai-http": "^4.3.0",
        "dotenv-load": "^2.0.0",
        "gulp": "^4.0.2",
        "mocha": "^8.2.0",
        "nyc": "^15.1.0",
        "rewire": "^5.0.0",
        "sinon": "^9.2.0",
        "sinon-chai": "^3.5.0",
        "sinon-express-mock": "^2.2.1",
        "tslint": "^6.1.2",
        "tslint-no-unused-expression-chai": "^0.1.4",
        "typedoc": "^0.19.2",
        "typescript": "^4.0.3"
    },
    "dependencies": {
        "@vamship/arg-utils": "^2.4.8",
        "@vamship/error-types": "^1.7.10",
        "@vamship/expressjs-routes": "^2.1.2",
        "@vamship/logger": "^4.3.1",
        "ajv": "^6.12.6",
        "bluebird": "^3.7.2",
        "dotenv": "^8.2.0",
        "dotenv-load": "^2.0.0",
        "express": "^4.17.1",
        "knex": "^0.21.1",
        "knex-stringcase": "^1.4.1"
    },

    "repository": {
        "type": "git",
        "url": "https://<%= gitUrl %>.git"
    },
    "bugs": {
        "url": "https://<%= gitUrl %>/issues"
    },
    "homepage": "https://<%= gitUrl %>#readme",
    "buildMetadata": {
        "projectType": "api",
        "requiredEnv": [],
<% if(dockerRequired) {-%>
        "language": "ts",
        "docker": {
            "default": {
                "repo": "<%= dockerFullRepo %>",
                "buildArgs": {
                }
            }
        }
<% } else {-%>
        "language": "ts"
<% }-%>
    }
}
